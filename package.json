{
  "name": "server-san-clemente",
  "version": "1.0.0",
  "private": true,
  "description": "The server for the SanClemente app and services",
  "main": "src/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node api/index.js",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@google-cloud/local-auth": "^2.1.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "googleapis": "^105.0.0",
    "helmet": "^7.2.0",
    "http-server": "^14.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.3.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/**",
      "data/**"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
